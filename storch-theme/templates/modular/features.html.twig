<section class="x-features">
    <section class="section-title">
        <div class="container text-center">
            <h2>{{ page.title|raw }}</h2>
            <span class="bordered-icon"><i class="fa fa-circle-thin"></i></span>
        </div>
    </section>
    <div class="container">
        <div class="row">
            <div class="col-md-6 img-left">
                {% if page.header.image != '' %}
                {{ page.media.images[page.header.image].html()|raw }}
                {% endif %}
            </div>
            <div class="col-md-6">
                {% for feature in page.header.features %}
                <div class="promo-block-wrapper clearfix">
                    <div class="promo-icon">
                        {% if feature.icon != '' %}
                        <a href="{{ feature.link }}"><i class="fa {{ feature.icon }}"></i></a>
                        {% endif %}
                    </div>
                    <div class="promo-content">
                        <h3><a href="{{ feature.link }}">{{ feature.title|raw }}</a></h3>

                        <p>{{ feature.description|raw }}</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
